<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!--Appbar背景色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--控制各个控件被选中时的颜色-->
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--app启动主题-->
    <style name="AppStart" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!--默认所有页面显示主题-->
    <style name="DefaultPageTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
    </style>
    <!--默认文本样式-->
    <style name="DefaultTextStyle">
        <item name="android:textColor">@color/defaultTextColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/textSize14</item>
    </style>
    <!--默认输入输入样式-->
    <style name="DefaultInputTextStyle" parent="DefaultTextStyle">
        <item name="android:textColorHint">@color/defaultTextHintColor</item>
    </style>
    <!--默认按钮样式-->
    <style name="DefaultButtonStyle" parent="DefaultTextStyle">
        <item name="android:backgroundTint">@color/defaultButtonDisableColor</item>
        <item name="android:background">@drawable/avlw_solid_radius_8</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#fff</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <!--登录页面输入样式-->
    <style name="loginInput" parent="DefaultInputTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:digits">1234567890</item>
        <item name="android:background">#fff</item>
    </style>

    <!--物品操作界面标题-->
    <style name="HouseholdObjectsOptionsTile" parent="DefaultTextStyle">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <!--默认标题栏样式-->
    <style name="DefaultTitleBarHeadView">
        <item name="avlwLeftBgRes">@android:drawable/ic_notification_clear_all</item>
        <item name="avlwLeftDistanceLeft">16dp</item>
        <item name="bavlwLeftDistanceRight">16dp</item>
        <item name="avlwTitleTextSize">@dimen/textSize16</item>
        <item name="avlwTitleTextColor">#464646</item>
    </style>

</resources>
